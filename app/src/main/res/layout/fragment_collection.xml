<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.collection.CollectorFragment"
>
  <ScrollView
      android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
  >
    <LinearLayout
        android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
    >

    <LinearLayout
      android:id="@+id/layout_cover"
      android:layout_width="match_parent"
      android:layout_height="402dp"
      android:background="@drawable/layout_bg"
      android:orientation="vertical"
    >
      <ImageView
        android:id="@+id/collectionImage"
        android:layout_width="340dp"
        android:layout_height="310dp"
        android:src="@drawable/collectors"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="35dp"
          android:layout_gravity="center" />

      <TextView
        android:id="@+id/description_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:text="@string/collection_description"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
          android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/collectionImage"
        app:layout_constraintTop_toBottomOf="@+id/collectionImage"
        />

      <TextView
          android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
          android:layout_marginTop="2dp"
        android:text="@string/collection_description_parte2"
        android:textAlignment="center"
        android:textSize="14sp"
          android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/collectionImage"
        app:layout_constraintTop_toBottomOf="@+id/description_collection"
        />
    </LinearLayout>

      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/collectionRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/collectionImage"
        app:layout_constraintTop_toBottomOf="@+id/layout_cover"
        android:layout_gravity="center"
      />
    </LinearLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>